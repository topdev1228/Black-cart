{
    "name": "blackcart/shopify",
    "type": "project",
    "description": "Blackcart for Shopify app",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "proprietary",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/blackcart/laravel-artisan-domain-contexts.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/blackcart/laravel-unleash.git"
        }
    ],
    "replace": {
    },
    "require": {
        "php": "^8.3",
        "barryvdh/laravel-ide-helper": "^3.0",
        "brianium/paratest": "^7.3",
        "brick/money": "^0.8.1",
        "datadog/dd-trace": "^0.87.2",
        "fakerphp/faker": "^1.23",
        "google/cloud-logging": "^1.29",
        "google/cloud-pubsub": "^2.0",
        "guzzlehttp/guzzle": "^7.2",
        "jasonmccreary/laravel-test-assertions": "^2.4",
        "laravel/framework": "^11.3",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "league/flysystem-google-cloud-storage": "^3.15",
        "mikefrancis/laravel-unleash": "dev-dshafik/add-variant-support-refactor",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^10.5",
        "predis/predis": "*",
        "prinsfrank/standards": "^2.3",
        "s-ichikawa/laravel-sendgrid-driver": "^4.0",
        "socialiteproviders/shopify": "^4.1",
        "spatie/laravel-collection-macros": "^7.14",
        "spatie/laravel-data": "^4.1",
        "spatie/laravel-google-cloud-storage": "^2.3",
        "spawnia/sailor": "^0.31.0",
        "stackkit/laravel-google-cloud-tasks-queue": "^3.5",
        "swisnl/laravel-psr-http-client-bridge": "^0.2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.35",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "nette/php-generator": "^4.1",
        "nunomaduro/collision": "^8.0",
        "phpro/grumphp": "^2.5",
        "roave/security-advisories": "dev-master",
        "spatie/laravel-ignition": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/",
            "Tests\\Unit\\": "tests/Unit/",
            "Tests\\Feature\\": "tests/Feature/",
            "Tests\\Fixtures\\": "tests/Fixtures/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-build-cmd": [
            "@php -v",
            "@php -m"
        ],
        "post-deploy-cmd": [
            "@php artisan config:cache",
            "@php artisan route:cache",
            "@php artisan event:cache",
            "@php artisan view:cache"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpro/grumphp": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
